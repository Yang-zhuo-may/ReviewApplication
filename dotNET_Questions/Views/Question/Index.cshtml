@model IEnumerable<Question>
@{
    ViewData["Title"] = "Index";
}

<h1>Review questions</h1>

<div class="container p_3">
    <div class="row pt-4">
        <div class="col_6">
            <h2 class="text-primary">Qustions</h2>
        </div>
        <div class="col_6 text-end">
            <a asp-controller="Question" asp-action="Create" class="btn btn-primary">
                Add New Question
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Questions
            </th>
            <th>
                Answer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Problem
                </td>
                <td width="30%">
                    @obj.Answer
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Question" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>